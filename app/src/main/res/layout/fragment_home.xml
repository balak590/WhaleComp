<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homefragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/banner_image"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:src="@drawable/notification_bar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/sound"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"

                    android:text="WhaleComp用戶 **9 開啓最優策略。"/>
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/card_display1"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".75">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/wallet_symbol"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="當前縂净值"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="6dp"
                                android:textColor="@color/text_color"/>
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/eye_button"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$1,000.00"
                            android:id="@+id/amountText"
                            android:textStyle="bold"
                            android:fontFamily="@font/alibaba_bold"
                            android:textSize="25sp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:textAlignment="gravity"
                        android:id="@+id/navigateWallet"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/card_button1"
                            android:adjustViewBounds="true"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="詳情"
                            android:fontFamily="@font/alibaba_bold"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color_blue"/>
                    </RelativeLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:id="@+id/navigateWallet2"
                        android:src="@drawable/blue_square_button"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="剩餘 2小時30分鐘"
                        android:textColor="@color/bg_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="即將優化策略：高級必賺策略"
                    android:gravity="center"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/big_card"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight=".1"
                        android:src="@drawable/eps_symbol"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".65"
                        android:textSize="16sp"
                        android:text="USD稳定EPS收益峰值策略"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:id="@+id/navigateDesc1"
                        android:layout_weight=".25">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/card_button1"
                            android:adjustViewBounds="true"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="詳情"
                            android:fontFamily="@font/alibaba_bold"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color_blue"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/yellow_card"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="45sp"
                                    android:text="140"
                                    android:fontFamily="@font/alibaba_bold"
                                    android:textStyle="bold"
                                    android:textColor="@color/bg_color"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="19dp"
                                            android:scaleType="fitXY"
                                            android:alpha=".7"
                                            android:adjustViewBounds="true"
                                            android:src="@drawable/orange_box"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/bg_color"
                                            android:textStyle="bold"
                                            android:textSize="10sp"
                                            android:layout_centerInParent="true"
                                            android:text="APY"/>

                                    </RelativeLayout>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/bg_color"
                                        android:fontFamily="@font/alibaba_bold"
                                        android:text=".00%"/>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="使用優化策略"
                                android:textColor="@color/bg_color"
                                android:textSize="17sp"
                                android:fontFamily="@font/alibaba_bold"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_weight=".5">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/blue_card"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="45sp"
                                    android:text="20"
                                    android:fontFamily="@font/alibaba_bold"
                                    android:textStyle="bold"
                                    android:textColor="@color/bg_color"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="19dp"
                                            android:scaleType="fitXY"
                                            android:adjustViewBounds="true"
                                            android:alpha=".7"
                                            android:src="@drawable/blue_box"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/bg_color"
                                            android:textStyle="bold"
                                            android:textSize="10sp"
                                            android:layout_centerInParent="true"
                                            android:text="APY"/>

                                    </RelativeLayout>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/bg_color"
                                        android:fontFamily="@font/alibaba_bold"
                                        android:text=".00%"/>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未使用優化策略"
                                android:textColor="@color/bg_color"
                                android:textSize="17sp"
                                android:fontFamily="@font/alibaba_bold"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="25dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight=".75">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/input_box_medium"
                            android:adjustViewBounds="true"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:layout_height="wrap_content"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/grey_dollor"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="輸入金額 測算收益"
                                android:inputType="phone"
                                android:digits="1234567890"
                                android:id="@+id/calculateText"
                                android:background="@null"
                                android:fontFamily="@font/alibaba_bold"
                                android:textSize="17sp"
                                />
                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight=".25">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/button_big"
                            android:adjustViewBounds="true"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:id="@+id/calculateButton"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="試算"
                            android:fontFamily="@font/alibaba_bold"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="@color/text_color_blue"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="25dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/input_box_big"
                        android:adjustViewBounds="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".75">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/alibaba_bold"
                                android:text="年化總收益（未含本金）"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="18dp"
                                    android:layout_height="18dp">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/circle_white"/>
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="2dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/blue_dollor"/>
                                </RelativeLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17sp"
                                    android:id="@+id/profit20Text"
                                    android:layout_marginLeft="2dp"
                                    android:text="$10,000.00"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="17sp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_height="wrap_content"
                                    android:text="(20%)"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="18dp"
                                    android:layout_height="18dp">
                                    <ImageView
                                        android:adjustViewBounds="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/circle_white"/>
                                    <ImageView
                                        android:adjustViewBounds="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="2dp"
                                        android:src="@drawable/yellow_dollor"/>
                                </RelativeLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17sp"
                                    android:id="@+id/profit140Text"
                                    android:layout_marginLeft="2dp"
                                    android:text="$50,000.00"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="17sp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_height="wrap_content"
                                    android:text="(140%)"/>
                            </LinearLayout>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wallet_bg"
                                android:alpha=".3"
                                android:adjustViewBounds="true"/>

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="25dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/navigateDesc2"
                        android:src="@drawable/blue_square_button"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="開始使用"
                        android:textColor="@color/bg_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/ad_rect"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/ad"
                android:scaleType="fitXY"
                android:padding="20dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
</FrameLayout>