<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/navScrollBar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/closeDrawer"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/menu_close"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/night_symbol" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/homeMenuItem"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/homeLayout"
            android:scaleType="fitStart"
            android:src="@drawable/nav_bar_button_blue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/home_symbol_white"
                android:layout_weight=".2"

                android:id="@+id/homeIcon"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="首页"
                android:id="@+id/homeText"
                android:textColor="@color/bg_color"
                android:paddingHorizontal="10dp"
                android:textSize="19sp"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/swapMenuItem"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/swapLayout"
            android:scaleType="fitStart"
            android:src="@drawable/nav_bar_button_white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/swap_symbol"
                android:layout_weight=".2"
                android:id="@+id/swapIcon"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="幣幣兌換"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:textSize="19sp"
                android:id="@+id/swapText"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/walletMenuItem"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/walletLayout"
            android:src="@drawable/nav_bar_button_white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/wallet_symbol"
                android:layout_weight=".2"
                android:id="@+id/walletIcon"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我的策略"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:textSize="19sp"
                android:id="@+id/walletText"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/docMenuItem"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:id="@+id/docLayout"
            android:src="@drawable/nav_bar_button_white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/document_symbol"
                android:layout_weight=".2"
                android:id="@+id/docIcon"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="所有策略"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:textSize="19sp"
                android:id="@+id/docText"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/giftMenuItem"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:id="@+id/giftLayout"
            android:src="@drawable/nav_bar_button_white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/gift_symbol"
                android:layout_weight=".2"
                android:id="@+id/giftIcon"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="幸运大抽奖"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:textSize="19sp"
                android:id="@+id/giftText"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_color"
        android:layout_marginHorizontal="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_weight=".33">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_grey"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:src="@drawable/twitter_symbol"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_weight=".33">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_grey"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:src="@drawable/telegram_symbol"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_weight=".33">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_grey"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:src="@drawable/m_symbol"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight=".33">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/round_rect"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:text="简"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight=".33">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/round_rect_pressed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:text="繁"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight=".33">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/round_rect_unpressed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:text="EN"/>

        </RelativeLayout>
    </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
